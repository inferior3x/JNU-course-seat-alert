<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="css/auth_shared.css"></link>
    <script src="/js/signup.js" defer></script>
  </head>
  <body>
    <div class="layerPopup">
      <div class="spinner"></div>
    </div>
      <section>
        <img src="img/jnu_logo.svg" alt="전남대학교 로고" id="jnu-logo">
        <form>
          <input type="hidden" name="_csrf" id="_csrf" value="<%= locals.csrfToken %>">
          <div>
            <label for="user-id">아이디</label>
            <input
              type="text"
              name="user-id"
              id="user-id"
              pattern="[a-zA-Z0-9]+"
              class="personal-info-input"
              required
            />
          </div>
          <div>
            <label for="user-pw">비밀번호</label>
            <input class="personal-info-input" type="password" name="user-pw" id="user-pw" required />
          </div>
          <div>
            <label for="user-pw2">비밀번호 확인</label>
            <input class="personal-info-input" type="password" name="user-pw2" id="user-pw2" required />
          </div>
          <button type="button" id="spotlight-btn">회원가입</button>
        </form>
        <form action="/login" method="GET">
          <button id="non-spotlight-btn">로그인</button>
        </form>
    </section>
  </body>
</html>
