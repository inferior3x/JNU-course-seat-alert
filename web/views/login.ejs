<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="css/auth_shared.css"></link>
    <script src="/js/view/login.js" defer></script>
  </head>
  <body>
    <!-- modals -->
    <%- include('includes/modals.ejs') %>
    <!-- loading spinner -->
    <%- include('includes/loading-spinner.ejs') %>

    <img src="img/jnu_logo.svg" alt="전남대학교 로고" id="jnu-logo">
    <form action="/login" method="POST">
      <input type="hidden" name="_csrf" id="_csrf" value="<%= locals.csrfToken %>">
      <input type="text" id="push-token">
      <div>
        <label for="user-id">아이디</label>
        <input class="personal-info-input" type="text" name="user-id" id="user-id" pattern="[a-zA-Z0-9]+"  required/>
      </div>
      <div>
        <label for="user-pw">비밀번호</label>
        <input class="personal-info-input" type="password" name="user-pw" id="user-pw" required/>
      </div>
      <button id="spotlight-btn" type="button">로그인</button>
    </form>
    <form action="/signup" method="GET">
      <button id="non-spotlight-btn">회원가입</button>
    </form>

  </body>
</html>
